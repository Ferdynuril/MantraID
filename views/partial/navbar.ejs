<nav class="bg-gray-800 w-full top-0 start-0 border-b border-default mb-8">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img class="h-6 shadow-lg" src="/images/logo.png" alt="Logo">
    </a>

    <button id="nav-toggle"
      type="button"
      aria-controls="navbar-default"
      aria-expanded="false"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-body rounded-md md:hidden hover:bg-blue-700 hover:text-heading focus:outline-none">
      <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-width="2"
          d="M5 7h14M5 12h14M5 17h14" />
      </svg>
    </button>

    <!-- Collapsible area -->
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <!-- Keep links and search together on the left: group container -->
      <div class="flex flex-col md:flex-row md:items-center md:gap-6">
        <!-- Links group -->
        <div class="w-full md:w-auto">
          <ul class="font-medium grid grid-cols-2 gap-2 text-center p-4 mt-4 md:flex md:gap-8 md:p-0 md:mt-0 md:text-left">
            <li>
              <a href="/"
                class="block py-2 px-3 shadow-xl rounded md:p-0 <%= currentPath === '/' ? 'text-white md:text-blue-400 bg-blue-700 md:bg-transparent' : 'text-white bg-gray-700 md:bg-transparent hover:text-blue-400' %>">
                Home
              </a>
            </li>

            <li>
              <a href="/manga"
                class="block py-2 px-3 shadow-xl rounded md:p-0 <%= (/^\/manga(?:\/|$)/i).test(currentPath || '') ? 'text-white md:text-blue-400 bg-blue-700 md:bg-transparent' : 'text-white bg-gray-700 md:bg-transparent hover:text-blue-400' %>">
                Manga
              </a>
            </li>

            <li>
              <a href="#" class="block py-2 px-3 text-white bg-gray-700 shadow-xl rounded md:bg-transparent md:shadow-none md:p-0 hover:text-blue-400">
                Genre
              </a>
            </li>

            <li>
              <a href="#" class="block py-2 px-3 text-white bg-gray-700 shadow-xl rounded md:bg-transparent md:shadow-none md:p-0 hover:text-blue-400">
                Popular
              </a>
            </li>

            <% if (admin) { %>
            <li>
              <a href="/admin" class="block py-2 px-3 text-white bg-gray-700 shadow-xl rounded md:bg-transparent md:shadow-none md:p-0 hover:text-blue-400">
                Admin Panel
              </a>
            </li>
            <li>
              <a href="/logout" class="block py-2 px-3 text-white bg-gray-700 shadow-xl rounded md:bg-transparent md:shadow-none md:p-0 hover:text-blue-400">
                Logout
              </a>
            </li>
            <% } %>
          </ul>
        </div>

        <!-- Search group (separate element but still left with links) -->
        <form method="GET" action="/manga" class="w-full md:w-auto px-4 md:px-0">
          <label for="q" class="sr-only">Search manga</label>
          <div class="relative w-full md:w-64">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
            </svg>

            <input
              id="q"
              name="q"
              type="search"
              value="<%= typeof q !== 'undefined' ? q : '' %>"
              placeholder="Cari manga..."
              class="w-full py-2 px-3 pl-10 pr-3 rounded bg-gray-700 border border-gray-600 text-sm text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none"
            />
          </div>
        </form>
      </div>
    </div>
  </div>
</nav>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const toggleBtn = document.getElementById("nav-toggle");
  const menu = document.getElementById("navbar-default");

  if (!toggleBtn || !menu) return;

  toggleBtn.addEventListener("click", () => {
    const isHidden = menu.classList.toggle("hidden");
    toggleBtn.classList.toggle("bg-blue-600");
    toggleBtn.setAttribute('aria-expanded', (!isHidden).toString());
  });
});
</script>